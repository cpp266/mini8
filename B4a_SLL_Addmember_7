#include<iostream>
#include<string>
using namespace std;

struct node {
    int prn;
    string name;
    node* next;
};

node *temp;

class pinclub {
public:
    node *head,*tail,*nnode;
    pinclub() { head=tail=NULL; }

    void create();           // Add members
    void insertion();        // Add president
    void insertionlast();    // Add secretary
    void count();            // Total members
    void display();          // Display members
};

void pinclub::create() {
    char m;
    do {
        nnode=new node;
        nnode->next=NULL;
        cout<<endl<<"Enter prn number: ";
        cin>>nnode->prn;
        cout<<endl<<"Enter name of user: ";
        cin>>nnode->name;
        if(head==NULL) head=tail=nnode;
        else { tail->next=nnode; tail=nnode; }
        cout<<endl<<"Do you want to continue(y or n): ";
        cin>>m;
    } while(m=='y');
    display();
}

void pinclub::insertion() {
    nnode=new node;
    nnode->next=NULL;
    cout<<endl<<"Enter president name: ";
    cin>>nnode->name;
    cout<<endl<<"Enter prn of president: ";
    cin>>nnode->prn;
    nnode->next=head;
    head=nnode;
    display();
}

void pinclub::insertionlast() {
    nnode=new node;
    nnode->next=NULL;
    cout<<endl<<"Enter name of secretary : ";
    cin>>nnode->name;
    cout<<endl<<"Enter prn of secretary: ";
    cin>>nnode->prn;
    tail->next=nnode;
    tail=nnode;
    display();
}

void pinclub::count() {
    int c=0;
    temp=head;
    while(temp!=NULL) { c++; temp=temp->next; }
    cout<<"\nTotal members in club are: "<<c<<endl;
}

void pinclub::display() {
    cout<<endl<<"YOUR UPDATED CLUB DATA IS: "<<endl;
    if(head==NULL) cout<<endl<<"Club is empty";
    else {
        cout<<"\nPRN NO.\t NAME"<<endl;
        temp=head;
        while(temp!=NULL) {
            cout<<endl<<temp->prn<<"    "<<temp->name;
            temp=temp->next;
        }
    }
}

int main() {
    pinclub l1;
    int choice;
    cout<<"\nWelcome to PINNACLE Club"<<endl;
    l1.create();

    do {
        cout<<"\n1. Insert President";
        cout<<"\n2. Insert Secretary";
        cout<<"\n3. Count Members";
        cout<<"\n4. Display Members";
        cout<<"\n5. Exit";
        cout<<"\nEnter your choice: ";
        cin>>choice;
        switch(choice) {
            case 1: l1.insertion(); break;
            case 2: l1.insertionlast(); break;
            case 3: l1.count(); break;
            case 4: l1.display(); break;
            case 5: cout<<"\nExiting..."; break;
            default: cout<<"\nInvalid choice!";
        }
    } while(choice!=5);

    return 0;
}
