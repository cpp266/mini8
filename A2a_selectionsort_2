#include <iostream>
using namespace std;

int main()
{
    int n, i, j, pass;
    float S[20], temp;

    // Input number of students and their percentages
    cout << "\nHow many students for Selection Sort? ";
    cin >> n;

    cout << "Enter percentage of students:\n";
    for (i = 0; i < n; i++)
    {
        cin >> S[i];
    }

    // Display original array
    cout << "\nSelection Sort: ";
    for (i = 0; i < n; i++)
    {
        cout << S[i] << " ";
    }
    cout << endl;

    // Selection Sort algorithm
    for (pass = 0; pass < n - 1; pass++)
    {
        int minI = pass;
        int comparisons = 0;

        for (j = pass + 1; j < n; j++)
        {
            comparisons++;
            if (S[j] < S[minI])
            {
                minI = j;
            }
        }

        if (minI != pass)
        {
            temp = S[pass];
            S[pass] = S[minI];
            S[minI] = temp;
        }

        // Display array after each pass
        cout << "Pass " << pass + 1 << " | Comparisons: " << comparisons << " | Array: ";
        for (i = 0; i < n; i++)
        {
            cout << S[i] << " ";
        }
        cout << endl;
    }

    // Display top 5 scores vertically
    cout << "\nTop 5 Scores:\n";
    for (i = n - 1; i >= n - 5 && i >= 0; i--)
    {
        cout << S[i] << endl;
    }

    return 0;
}
