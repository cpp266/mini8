#include <iostream>
#include <cstring>
using namespace std;

struct record {
    char name[10];
    int telno;
};

int main() {
    record hptelDir[10];

    // initialize table
    for(int i = 0; i < 10; i++) {
        strcpy(hptelDir[i].name, "empty");
        hptelDir[i].telno = -1;
    }

    int n;
    cout << "How Many Records? ";
    cin >> n;

    for(int i = 0; i < n; i++) {
        char Tempname[10];
        int TempNo;
        cout << "\nEnter Client Name: ";
        cin >> Tempname;
        cout << "Enter Telephone No of client: ";
        cin >> TempNo;

        int Total = 0;
        for(int j = 0; Tempname[j] != '\0'; j++) Total += Tempname[j];
        int h = Total % 10;

        // DOUBLE HASHING
        if(strcmp(hptelDir[h].name, "empty") == 0) {
            strcpy(hptelDir[h].name, Tempname);
            hptelDir[h].telno = TempNo;
            cout << "for double hashing stored at position " << h << endl;
        } else {
            cout << "for double hashing collision occurred for " << Tempname << " at position " << h << endl;
            int m;
            cout << "Enter the prime number smaller than size[10]: ";
            cin >> m;
            int step = m - (Total % m);
            int idx = h;
            for(int k = 1; k < 10; k++) {
                idx = (idx + step) % 10;
                if(strcmp(hptelDir[idx].name, "empty") == 0) {
                    strcpy(hptelDir[idx].name, Tempname);
                    hptelDir[idx].telno = TempNo;
                    break;
                }
            }
        }
    }

    // print double hashing table
    cout << "\nfor double hashing" << endl;
    cout << "sr.no\tName\tTel No:" << endl;
    for(int i = 0; i < 10; i++)
        cout << i << "\t" << hptelDir[i].name << "\t" << hptelDir[i].telno << endl;

    return 0;
}
