#include <iostream>
using namespace std;

int main()
{
    int n, i, j, pass;
    float G[20], temp;

    // Input number of students and their percentages
    cout << "\nHow many students for Bubble Sort? ";
    cin >> n;

    cout << "Enter percentage of students:\n";
    for (i = 0; i < n; i++)
    {
        cin >> G[i];
    }

    // Display original array
    cout << "\nBubble Sort: ";
    for (i = 0; i < n; i++)
    {
        cout << G[i] << " ";
    }
    cout << endl;

    // Bubble Sort algorithm
    for (pass = 1; pass < n; pass++)
    {
        int comparisons = 0;
        int swap = 0;

        for (j = 0; j < n - pass; j++)
        {
            comparisons++;
            if (G[j] > G[j + 1])
            {
                temp = G[j];
                G[j] = G[j + 1];
                G[j + 1] = temp;
                swap = 1;
            }
        }

        // Display array after each pass
        cout << "Pass " << pass << " | Comparisons: " << comparisons << " | Array: ";
        for (i = 0; i < n; i++)
        {
            cout << G[i] << " ";
        }
        cout << endl;

        if (swap == 0)
            break; // Array already sorted
    }

    // Display top 5 scores vertically
    cout << "\nTop 5 Scores:\n";
    for (i = n - 1; i >= n - 5 && i >= 0; i--)
    {
        cout << G[i] << endl;
    }

    return 0;
}
